                    <posy>241</posy>
                    <width>878</width>
                    <height>288</height>
                    <align>justify</align>
                    <pagecontrol>-</pagecontrol>
                    <label>$INFO[Container(50).ListItem.Plot]</label>
                </control>
                <control type="label">
                    <posy>540</posy>
                    <width>700</width>
                    <height>36</height>
                    <font>size22</font>
                    <label>[COLOR=Grey]$LOCALIZE[19031]: [/COLOR]$INFO[Container(50).ListItem.NextTitle]</label>
                </control>
            </control>
